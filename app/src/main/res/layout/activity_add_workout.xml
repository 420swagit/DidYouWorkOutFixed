<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="fannyu.didyouworkout20.addWorkout">

    <Button
        android:id = "@+id/previous"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Home"/>

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/workoutname"
        android:layout_below="@+id/previous"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginTop="46dp"
        android:hint = "Workout Name" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/workoutquantity"
        android:hint = "Workout Quantity"
        android:layout_gravity="center_vertical"
        android:layout_below="@+id/workoutname"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Add"
        android:id="@+id/add"
        android:layout_gravity="bottom"
        android:layout_below="@+id/workoutquantity"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:onClick="addWorkout"/>


</RelativeLayout>
